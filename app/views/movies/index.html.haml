%h1 All Movies

%table#movies
  %thead
    %tr
      %th Movie Title
      %th Rating
      %th Relase Date
      %th More Info
  %tbody
    - @movies.each do |movie|
      %tr
        %td= link_to movie.title, movie_path(movie)
        %td= movie.rating
        %td= movie.release_date
        %td= button_to 'Delete', movie_path(movie), :method => :delete, :confirm => "Are you sure of delete #{movie.title}?"

= link_to 'Add new movie', new_movie_path

